{
	"extends": [
		"airbnb",
		"plugin:jsx-a11y/recommended",
		"plugin:react-hooks/recommended",
		"prettier",
		"prettier/react"
	],
	"plugins": ["jsx-a11y", "prettier"],
	"rules": {
		"semi": 1,
		"react/jsx-props-no-spreading": "off",
		"no-use-before-define": "off",
		"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
		"prettier/prettier": [
			"error",
			{
				"semi": true
			}
		]
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		}
	}
}
